@{ 
    ViewBag.Title = "Notify fee pending information";
}
<h2>Send pending fee notification</h2>
@using (Html.BeginForm())
{
    
    <div>
        <strong>Student ID:</strong> @ViewBag.StudentId
        @Html.Hidden("studentId",(int) ViewBag.StudentId)
    </div>
    <div>
        <label for="notificationMethod">Notification Method:</label>
        @Html.DropDownList("notifierType", (SelectList)ViewBag.NotifierOptions)
    </div>
    <div>
        <input type="submit" value="Send Notification" />
    </div>

    @if (ViewBag.AlertMessage != null)
    {
        <script>
            alert('@ViewBag.AlertMessage');
        </script>
    }
}
